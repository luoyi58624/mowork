{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^m-(.*)": "@/components/my-components/m-$1/m-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "tabbar/home/home",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": true,
        "app-plus": {
          "bounce": "none",
          "pullToRefresh": {
            "offset": "90px"
          }
        },
        "h5": {
          "pullToRefresh": {
            "offset": "44px"
          }
        }
      }
    },
    {
      "path": "tabbar/tool/tool",
      "style": {
        "navigationBarTitleText": "工具"
      }
    },
    {
      "path": "tabbar/project/project",
      "style": {
        "navigationBarTitleText": "项目圈"
      }
    },
    {
      "path": "tabbar/im/im",
      "style": {
        "navigationBarTitleText": "聊天"
      }
    },
    {
      "path": "tabbar/user/user",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": true,
        "app-plus": {
          "bounce": "none",
          "pullToRefresh": {
            "offset": "120px"
          }
        },
        "h5": {
          "pullToRefresh": {
            "offset": "80px"
          }
        }
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "用户登录"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "MoWork",
    "navigationBarBackgroundColor": "#0078d4",
    "backgroundColor": "#fafafa"
  },
  "tabBar": {
    "color": "#222222",
    "selectedColor": "#0078d4",
    "borderStyle": "black",
    "backgroundColor": "#fafafa",
    "list": [
      {
        "pagePath": "tabbar/home/home",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home_active.png",
        "text": "首页"
      },
      {
        "pagePath": "tabbar/tool/tool",
        "iconPath": "static/tabbar/tool.png",
        "selectedIconPath": "static/tabbar/tool_active.png",
        "text": "工具"
      },
      {
        "pagePath": "tabbar/project/project",
        "iconPath": "static/tabbar/project.png",
        "selectedIconPath": "static/tabbar/project_active.png",
        "text": "项目"
      },
      {
        "pagePath": "tabbar/im/im",
        "iconPath": "static/tabbar/im.png",
        "selectedIconPath": "static/tabbar/im_active.png",
        "text": "消息"
      },
      {
        "pagePath": "tabbar/user/user",
        "iconPath": "static/tabbar/user.png",
        "selectedIconPath": "static/tabbar/user_active.png",
        "text": "我的"
      }
    ]
  }
}
